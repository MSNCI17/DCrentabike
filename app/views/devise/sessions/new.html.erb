<div class="container">
  <div id="clearance" class="sign-in">

  <h2>Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<%= render 'shared/flash_messages' if !flash.empty? %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :required=>true, autofocus: true, autocomplete: "email",class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password,:required=>true, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %> Remember Me
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", class:"btn btn-outline-light" %>
  </div>
<% end %>

  </div>
</div>
<%= render "devise/shared/links" %>
